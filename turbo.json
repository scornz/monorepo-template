{
  "$schema": "https://turborepo.org/schema.json",
  "ui": "tui",
  "tasks": {
    "lint": {
      "outputs": []
    },
    "test": {
      "dependsOn": ["build"],
      "inputs": ["**/*.{ts,tsx,js,jsx}"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        ".next/**",
        "build/**",
        "node_modules/.cache/metro/**"
      ]
    },
    "eas:ios": {
      "dependsOn": ["build"],
      "cache": false,
      "interactive": true,
      "outputs": [
        "build/**",
        "node_modules/.cache/metro/**"
      ]
    },
    "eas:android": {
      "dependsOn": ["build"],
      "cache": false,
      "interactive": true,
      "passThroughEnv": ["ANDROID_HOME", "ANDROID_SDK_ROOT"],
      "outputs": [
        "build/**",
        "node_modules/.cache/metro/**"
      ]
    },
    "eas": {
      "dependsOn": ["eas:ios", "eas:android"],
      "cache": false,
      "interactive": true,
      "outputs": [
        "build/**",
        "node_modules/.cache/metro/**",
        "artifacts/**"
      ]
    },
    "eas:remote": {
      "dependsOn": ["build"],
      "cache": false,
      "interactive": true,
      "outputs": [
        "build/**",
        "node_modules/.cache/metro/**"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
