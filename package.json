{
  "private": true,
  "name": "@scornz/monorepo",
  "type": "module",
  "workspaces": [
    "frontend/**"
  ],
  "scripts": {
    "dev": "turbo watch dev",
    "dev:mobile": "turbo watch dev --filter=\"{./frontend/apps/mobile}...\"",
    "dev:web": "turbo watch dev --filter=\"{./frontend/apps/web}...\"",
    "lint": "turbo lint",
    "test": "turbo test",
    "build": "turbo build",
    "eas:ios": "turbo eas:ios --filter=\"{./frontend/apps/mobile}...\" -- --profile development",
    "eas:android": "turbo eas:android --filter=\"{./frontend/apps/mobile}...\" -- --profile development",
    "eas:prod": "turbo eas",
    "eas:remote": "turbo eas:remote -- --profile production",
    "build:mobile": "turbo build --filter=\"...{./frontend/apps/mobile}\"",
    "build:web": "turbo build --filter=\"...{./frontend/apps/web}\"",
    "prepare": "husky",
    "postinstall": "yarn prepare"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "husky": "^9.1.2",
    "turbo": "^2.0.9",
    "typescript": "^4.9.5"
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "packageManager": "yarn@4.3.1"
}
