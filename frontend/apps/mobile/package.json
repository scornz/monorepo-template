{
  "private": true,
  "name": "@scornz/mobile",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "expo start -c",
    "lint": "eslint --ext js,ts,tsx .",
    "build": "expo export --output-dir ./build --platform all",
    "eas:ios": "eas build --platform ios --local",
    "eas:android": "eas build --platform android --local",
    "eas:remote": "eas build --platform all",
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "eas-build-pre-install": "corepack enable && yarn set version 4",
    "eas-build-post-install": "yarn --cwd ../.. run build:mobile"
  },
  "dependencies": {
    "@expo/metro-runtime": "^3.2.1",
    "@scornz/api": "*",
    "eas-cli": "^10.2.1",
    "expo": "^51.0.17",
    "expo-dev-client": "~4.0.20",
    "expo-status-bar": "~1.12.1",
    "expo-updates": "~0.25.18",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-native": "0.74.2",
    "react-native-web": "~0.19.11"
  },
  "devDependencies": {
    "@babel/core": "^7.24.5",
    "@scornz/eslint-config": "1.0.0",
    "@types/react": "~18.2.79",
    "@types/react-dom": "~18.2.25",
    "babel-preset-expo": "~11.0.11"
  },
  "eslintConfig": {
    "extends": "@scornz/eslint-config",
    "ignorePatterns": [
      "node_modules",
      "build",
      ".expo",
      ".expo-shared"
    ],
    "overrides": [
      {
        "files": [
          "*.js"
        ],
        "env": {
          "node": true
        }
      }
    ]
  }
}
